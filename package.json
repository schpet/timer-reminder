{
	"name": "timer-reminder",
	"description": "ensures a harvest timer is running",
	"version": "0.0.1",
	"activationEvents": ["onStartupFinished"],
	"categories": ["Other"],
	"contributes": {
		"commands": [
			{
				"command": "timer-reminder.projectSetup",
				"title": "Timer Reminder: set harvest project"
			},
			{
				"command": "timer-reminder.setApiKey",
				"title": "Timer Reminder: set harvest api key"
			}
		]
	},
	"dependencies": {
		"xstate": "^5.17.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/mocha": "^10.0.7",
		"@types/node": "20.x",
		"@types/vscode": "^1.91.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"esbuild": "^0.21.5",
		"eslint": "^8.57.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5"
	},
	"displayName": "Timer Reminder",
	"engines": {
		"vscode": "^1.91.0"
	},
	"icon": "docs/icon.png",
	"main": "./dist/extension.js",
	"packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
	"publisher": "schpet",
	"repository": {
		"type": "git",
		"url": "https://github.com/schpet/timer-reminder.git"
	},
	"scripts": {
		"check-types": "tsc --noEmit",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"compile-tests": "tsc -p . --outDir out",
		"format": "biome format --write src",
		"lint": "eslint src --ext ts",
		"package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"test": "vscode-test",
		"vscode:prepublish": "pnpm run package",
		"watch": "npm-run-all -p watch:*",
		"watch-tests": "tsc -p . -w --outDir out",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json"
	}
}
